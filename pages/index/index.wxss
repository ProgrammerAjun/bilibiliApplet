page{
    color: #666;
    padding: 10rpx;
}
/*首页导航栏*/
.nav_wrap{
}
.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}
.nav_item{
    display: inline-block;
    padding: 20rpx 45rpx;
    font-size: 30rpx;
}
.nav_item.active{
    border-bottom: 5rpx solid #de688b;
}
.slides{
    margin-top: 10rpx;
}
.slides swiper{
    height: 220rpx;
}
.slides navigator{
    width: 100%;
    height: 100%;
}
.slides image{
    width: 100%;
    height: 100%;
}
/*视频播放布局 */
.video_wrap{
    flex-wrap: wrap;
    display: flex;
    padding: 5rpx;
    justify-content: space-between;
}
.video_item{
    width: 48%;
    margin-top: 20rpx;
}
.video_image{
    position: relative;
}
.video_image image{
    width: 100%;
    border-radius: 15rpx;
}
.video_image .video_info{
    position: absolute;
    width: 100%;
    bottom: 15rpx;
    left: 0; 
    justify-content: space-around;
    display: flex;
    color: #FFF;
    font-size: 24rpx;
}
.video_title{
    font-size: 28rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}